#!/usr/bin/env bash
set -euo pipefail

# ---------------------------------------------
# Configuration
# ---------------------------------------------
BOOTSTRAP_CONTAINER="bootstrap"
KAFKA_SERVICES=("zookeeper" "kafka" "schema-registry")
EVENTS=("add_to_cart,purchase,product_view,search")

# ---------------------------------------------
# Functions
# ---------------------------------------------

# Placeholder art
ascii_ready() {
cat << "EOF"

